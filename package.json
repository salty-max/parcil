{
  "name": "parcil",
  "version": "0.1.0",
  "description": "A parser-combinator written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/salty-max/parcil",
  "author": "Maxime Blanc",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "start": "ts-node dist/index.js",
